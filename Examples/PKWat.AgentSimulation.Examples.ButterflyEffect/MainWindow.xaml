<Window x:Class="PKWat.AgentSimulation.Examples.ButterflyEffect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PKWat.AgentSimulation.Examples.ButterflyEffect"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600"
        SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Name="startSimulationButton" Content="Start Simulation" Click="startSimulationButton_Click" />
        <Button Grid.Row="0" Grid.Column="1" Name="stopSimulationButton" Content="Stop Simulation" Click="stopSimulationButton_Click" />
        <Grid Grid.Row="1" Grid.ColumnSpan="2"  Background="Black">
            <Border  Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top"  BorderBrush="White" BorderThickness="2" >
                <Image Name="simulationImage" Stretch="Uniform" />
            </Border>
        </Grid>
    </Grid>
</Window>
